{
    "watch": [
        "src"
    ],
    "ext": "ts,json",
    "ignore": [
        "node_modules",
        "dist",
        "build",
        "*.test.ts",
        "*.spec.ts"
    ],
    "exec": "ts-node src/index.ts",
    "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "tsconfig.json"
    },
    "delay": 1000,
    "restartable": "rs",
    "verbose": true
}